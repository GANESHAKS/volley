<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="10dp"
    tools:context=".auth.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/Header"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:text=" Login "
            android:textColor="#996666"
            android:textSize="50sp" />


        <LinearLayout
            style="@style/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et_email_login"

                style="@style/Header.edittext"
                android:layout_marginTop="80dp"
                android:hint="Enter username or email here!!!"
                android:inputType="text"
                android:textSize="20dp"

                />

            <EditText
                android:id="@+id/et_pass_login"
                style="@style/Header.edittext"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:hint="Enter Password here!!!"
                android:inputType="textPassword"
                android:textSize="20dp"
                app:endIconMode="password_toggle"


                />
            <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:text="login as faculty"
                android:id="@+id/cb_login_as_faculty"
                />

            <Button
                android:id="@+id/bt_login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="login"

                />

            <TextView
                android:id="@+id/tv_reg_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="Already a user click here to Login"
                android:textColor="#0000ff" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>