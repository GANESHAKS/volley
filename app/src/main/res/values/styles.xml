<resources>
    <!-- Base application theme. -->
    <style name="Header">

        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mytheme" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">#0000FF</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>

    </style>

    <!-- this is linear  layout style auth -->
    <style name="linearlayout">
        <item name="android:background">@drawable/custom_linear_layout</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:elevation">30dp</item>

        <item name="boxStrokeColor">#8F455C</item>


    </style>

    <style name="Header.edittext">

        <item name="android:background">@drawable/custom_edittext_auth</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#000000</item>
    </style>

</resources>